<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="practicaltest02.eim.systems.cs.pub.ro.practicaltest02.PracticalTest02MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SERVER"
        android:id="@+id/tvServer"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/tvFake"
        android:layout_below="@+id/tvServer"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etServer1"
        android:layout_below="@+id/tvServer"
        android:layout_toLeftOf="@+id/tvFake"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Port" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Server"
        android:id="@+id/btnServer1"
        android:layout_below="@+id/tvServer"
        android:layout_toRightOf="@+id/tvFake"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="CLIENT"
        android:id="@+id/tvClient"
        android:layout_below="@+id/btnServer1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etClient1"
        android:layout_below="@+id/tvClient"
        android:layout_toLeftOf="@+id/tvFake"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/etClient2"
        android:layout_below="@+id/tvClient"
        android:layout_toRightOf="@+id/tvFake"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:hint="Port" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/etClient3"
        android:layout_below="@+id/etClient1"
        android:layout_toLeftOf="@+id/tvFake"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="City" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Client"
        android:id="@+id/btnClient1"
        android:layout_below="@+id/etClient2"
        android:layout_toRightOf="@+id/tvFake"
        android:layout_alignRight="@+id/etClient2"
        android:layout_alignEnd="@+id/etClient2" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/spnClient1"
        android:layout_below="@+id/etClient3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:entries="@array/information_types"
        android:spinnerMode="dropdown"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/scrollView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/spnClient1"
        android:fillViewport="false">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tvDataDisplay" />
    </ScrollView>
</RelativeLayout>
